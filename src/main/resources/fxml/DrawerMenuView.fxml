<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="drawerView" alignment="CENTER_RIGHT" onMouseEntered="#onMouseDrawerEntered" onMouseExited="#onMouseDrawerExited" styleClass="drawerContent" stylesheets="@../css/darkstyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <JFXButton fx:id="importarDocumentoButton" graphicTextGap="20.0" onAction="#importarDocumento" prefHeight="94.0" prefWidth="300.0" ripplerFill="#614f4f" styleClass="drawerButton" text="Importar documento" textAlignment="CENTER" wrapText="true">
               <graphic>
                  <FontIcon iconColor="#3d8ae1" iconLiteral="gmi-arrow-downward" iconSize="60" />
               </graphic>
               <font>
                  <Font size="24.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="importarFuenteButton" graphicTextGap="20.0" onAction="#importarFuente" prefHeight="94.0" prefWidth="300.0" ripplerFill="#614f4f" styleClass="drawerButton" text="Importar fuente de datos" textAlignment="CENTER" wrapText="true">
               <graphic>
                  <FontIcon iconColor="#33e18d" iconLiteral="gmi-archive" iconSize="60" />
               </graphic>
               <font>
                  <Font size="26.0" />
               </font>
            </JFXButton>
            <JFXButton graphicTextGap="20.0" onAction="#onExportarPdf" prefHeight="94.0" prefWidth="300.0" ripplerFill="#614f4f" styleClass="drawerButton" text="Exportar informe a pdf" textAlignment="CENTER" wrapText="true">
               <graphic>
                  <FontIcon iconColor="RED" iconLiteral="gmi-picture-as-pdf" iconSize="60" />
               </graphic>
               <font>
                  <Font size="26.0" />
               </font>
            </JFXButton>
            <JFXButton alignment="CENTER" graphicTextGap="20.0" onAction="#onExportarDocumento" prefHeight="94.0" prefWidth="300.0" ripplerFill="#614f4f" styleClass="drawerButton" text="Exportar documento" textAlignment="CENTER" wrapText="true">
               <graphic>
                  <FontIcon iconColor="#1f48a6" iconLiteral="gmi-save" iconSize="60" />
               </graphic>
               <font>
                  <Font size="26.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="salirButton" alignment="CENTER" graphicTextGap="20.0" onAction="#salir" prefHeight="94.0" prefWidth="300.0" ripplerFill="#614f4f" styleClass="drawerButton" text="Salir" textAlignment="CENTER" wrapText="true">
               <graphic>
                  <FontIcon iconLiteral="gmi-exit-to-app" iconSize="60" />
               </graphic>
               <font>
                  <Font size="26.0" />
               </font>
            </JFXButton>
         </children>
      </VBox>
      <JFXButton contentDisplay="CENTER" ellipsisString="" graphicTextGap="0.0" maxWidth="20.0" minWidth="20.0" onAction="#onDrawerButton" prefHeight="200.0" prefWidth="20.0" styleClass="drawerSlideButton" textAlignment="CENTER">
         <graphic>
            <FontIcon iconLiteral="gmi-keyboard-arrow-right" iconSize="30" styleClass="drawerSlideButton" textAlignment="CENTER" />
         </graphic>
      </JFXButton>
   </children>
</HBox>
