            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label focusTraversable="false" text="Cargando visor de documentos..." textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/loading.gif" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </HBox>
      <GridPane id="mainContent" styleClass="darkBackground" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
            <RowConstraints />
          <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="60.0" styleClass="menu">
               <children>
                  <VBox fx:id="registrosVBox" alignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <Label text="Registros" />
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                           	  <Button fx:id="unloadButton" mnemonicParsing="false" onAction="#onUnloadButton" text="Quitar previsualización">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           	  <Button fx:id="topLeftButton" mnemonicParsing="false" onAction="#onTopLeftButton" text="&lt;&lt;">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="leftButton" mnemonicParsing="false" onAction="#onLeftButton" text="&lt;">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <TextField fx:id="pageNumTextField" alignment="CENTER" maxWidth="30.0" prefHeight="40.0" />
                              <Button fx:id="rightButton" mnemonicParsing="false" onAction="#onRightButton" text="&gt;">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="topRightButton" mnemonicParsing="false" onAction="#onTopRightButton" text="&gt;&gt;">
                              <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="reloadButton" mnemonicParsing="false" onAction="#onReloadButton" text="Recargar previsualización" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox id="pdfHBox" fx:id="pdfHBox" GridPane.rowIndex="2">
               <children>
                  <HBox minWidth="20.0" prefHeight="100.0" prefWidth="20.0" />
                  <PDFView id="pdfViewer" fx:id="pdfViewer" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <JFXDrawer fx:id="drawerMenu" alignment="CENTER_LEFT" defaultDrawerSize="600.0" layoutX="-280.0" miniDrawerSize="300.0" onDrawerClosed="#onDrawerClosed" onDrawerOpened="#onDrawerOpened" prefHeight="900.0" prefWidth="600.0" styleClass="drawer">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </JFXDrawer>
   </children>
</AnchorPane>
